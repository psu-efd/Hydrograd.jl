{
    "comment": "This is the control file for the SWE_2D case. It contains the control variables and options.",
    "bVerbose": false,
    "control_variables": {
        "srhhydro_file_name": "oneD_channel_with_bump_coarse.srhhydro",
        "comment": "Choose what to perform: forward simulation, inversion, sensitivity analysis, or UDE. Only one of them can be true.",
        "bPerform_Forward_Simulation": false,
        "bPerform_Inversion": false,
        "bPerform_Sensitivity_Analysis": false,
        "bPerform_UDE": true
    },
    "time_settings": {
        "comment": "Time settings for the simulation (overrides the srhhydro file)",
        "bUse_srhhydro_time_settings": false,
        "tspan": [0.0, 10.0],
        "dt": 0.1,
        "dt_save": 0.1,
        "nSave": 10
    },
    "UDE_options": {
        "comment": "Choice for UDE: ManningN_h, FlowResistance. For ManningN_h, a NN is used to fit ManningN as a function of water depth h. For FlowResistance, a NN is used to fit the flow resistance term (tau_b) as a function of h, u, and v.",
        "UDE_choice": "ManningN_h",
        "UDE_NN_config": {
            "comment": "Configuration for the NN",
            "input_dim": 1,
            "output_dim": 1,
            "hidden_layers": [3, 3],
            "activations": ["relu", "relu"],
            "output_bounds": [0.001, 0.1]
        },
        
        "UDE_bWSE_loss": true,
        "UDE_b_uv_loss": true,
                
        "UDE_optimizer": "Adam",
        "UDE_learning_rate": 0.01,
        "UDE_max_iterations": 2,
        "UDE_save_frequency": 1,
        "UDE_save_checkpoint": true,
        "UDE_checkpoint_frequency": 10,
        "UDE_sensealg": "AutoZygote()",
        "UDE_truth_file_name": "forward_simulation_solution_truth.json",
        "UDE_forward_simulation_initial_condition_options": "constant",
        "UDE_forward_simulation_initial_condition_file_name": "forward_simulation_initial_conditions.json",
        "UDE_forward_simulation_initial_condition_constant_values": [0.33, 0.18, 0.0],
        "UDE_ode_solver_options": {
            "comment": "Options for the ode solver in the forward pass",
            "ode_solver": "Tsit5()",
            "ode_solver_adaptive": true,
            "ode_solver_sensealg": "InterpolatingAdjoint(autojacvec=ZygoteVJP())",
            "ode_solver_b_jac_sparsity": true,
            "ode_solver_nSave": 10
        },
        "UDE_save_file_name": "UDE_results.jld2",
        "UDE_save_loss_history_file_name": "UDE_loss_history.csv",
        "UDE_save_parameters_history_file_name": "UDE_parameters_history.csv"
    }
}
